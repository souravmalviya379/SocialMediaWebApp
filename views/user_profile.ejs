
    <link rel="stylesheet" href="/css/user_profile.css">
    <h1>My Profile</h1>


    <% if(locals.user.id === profile_user.id) { %> 
        <!-- if user matches then show the form -->
        <form action="/users/update/<%= profile_user.id %>" method="POST">
            <input type="text" name="fname" placeholder="Your name" value="<%= profile_user.fname %>" required>
            <input type="email" name="email" placeholder="Your email" value="<%= profile_user.email %>" required>
            <input type="submit" value="Update">
        </form>
    <% } else { %>
        <!-- else show only the profile information -->
        <p>
            <%= profile_user.fname %>
        </p>
        <p>
            <%= profile_user.email %>
        </p>
    <% } %>