<link rel="stylesheet" href="/css/_header.css">
<header>
    <nav>
        <h2>SocialApp</h2>
        <ul>
            <% if(locals.user){ %>
                <li>
                    <a href="/users/profile/<%= user._id %>" style="text-transform: capitalize;">
                        <%= user.fname %>
                        <%= user.lname %>
                    </a>
                </li>
                <li>
                    <a href="/users/sign-out">Sign Out</a>
                </li>
            <% } else{ %>
                <li>
                    <a href="/users/login">Login</a>
                </li>
                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>
            <% } %>
        </ul>
    </nav>
</header>